<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="15dp"
    android:id="@+id/cvTournament"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:background="@color/sliver"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imgClub1"
            android:src="@drawable/logo_football"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_width="40dp"
            android:layout_height="40dp"></de.hdodenhof.circleimageview.CircleImageView>

        <TextView
            android:id="@+id/tvVs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_toRightOf="@+id/imgClub1"
            android:text="vs"></TextView>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imgClub2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_toRightOf="@+id/tvVs"
            android:src="@drawable/logo_football"></de.hdodenhof.circleimageview.CircleImageView>

       <LinearLayout
           android:layout_marginLeft="20dp"
           android:layout_centerVertical="true"
           android:layout_toRightOf="@+id/imgClub2"
           android:orientation="vertical"
           android:layout_width="match_parent"
           android:layout_height="wrap_content">
           <TextView
               android:id="@+id/tvDes"
               android:text="This match will take place in five minutes"
               android:textSize="12sp"
               android:textColor="@color/black"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"></TextView>

           <TextView
               android:id="@+id/tvTime"
               android:layout_marginTop="5dp"
               android:text="03:00 AM"
               android:textSize="12sp"
               android:textColor="@color/black"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"></TextView>
       </LinearLayout>
    </RelativeLayout>

